<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.paxet.evoapp.lesson10">
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EvoApp">
        <activity android:name=".ui.activity.MainActivity"
            android:launchMode="singleTop">
            <nav-graph android:value="@navigation/navigation" />
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter android:label="Evoapp">
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:scheme="https"
                    android:host="www.paxet.evoapp.com"
                    android:pathPattern="/movie/.*" />
            </intent-filter>
        </activity>
        <receiver
            android:name="com.paxet.evoapp.lesson10.ui.notifications.NotificationReceiver">
        </receiver>
    </application>

</manifest>